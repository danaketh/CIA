{% for f, d in meta.data %}
<div>
    <table class="table table-striped table-hover">
        <tr class="active">
            <th>
                <i class="glyphicon glyphicon-exclamation-sign"></i>
                &nbsp;&nbsp;
                {{ f }}
            </th>
            <th>Line</th>
            <th>Column</th>
        </tr>
        {% for r in d %}
            {% if r.type == 'error' %}
                {% set class = 'danger' %}
            {% elseif r.type == 'warning' %}
                {% set class = 'warning' %}
            {% else %}
                {% set class = '' %}
            {% endif %}
            <tr class="{{ class }}">
                <td>{{ r.message }}</td>
                <td>{{ r.line }}</td>
                <td>{{ r.column }}</td>
            </tr>
        {% endfor %}
    </table>
    {% if loop.last == false %}<hr>{% endif %}
</div>
{% endfor %}
